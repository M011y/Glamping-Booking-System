<Window x:Class="CA3_S00191042_MollyCandon.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CA3_S00191042_MollyCandon"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="250" Width="300"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="10,10,10.333,9.667">
            <TextBlock x:Name="tblkTitle" Text="Booking Confirmation"></TextBlock>
            <TextBlock x:Name="tblkConfirmation" HorizontalAlignment="Left" Margin="3" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Button x:Name="btnOk" Content="OK" Height="25" Width="100" Margin="3" Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
